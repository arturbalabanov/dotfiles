function test_cap () { cap download "$@" && cd "$_" && jq '.["'$_'"]' ~/all_metadata.json > metadata.json && cap run -cdp && cap run -p KLM AA D --autodate --metadata metadata.json; };

function rgjs() { rg -C 10 --smart-case --max-columns=200 -tjs "$@" ~/dev/yoshi_parsers/download/; }
function rgpy() { rg -C 10 --smart-case --max-columns=200 -tpy "$@" ~/dev/yoshi_parsers/cpy_processing/; }
